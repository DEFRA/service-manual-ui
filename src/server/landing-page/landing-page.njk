{% extends "layouts/page.njk" %}

{% block pageTitle %}
  {{ pageTitle }} | {{ serviceName }}
{% endblock %}

{% block header %}
<header class="defra-header">
  <div class="defra-header__inner">
    <div class="defra-header__brand-group">
      <a href="/" class="defra-header__logo-link">
        <img
          src="{{ getAssetPath('images/defra-logo.svg') }}"
          alt="Department for Environment, Food &amp; Rural Affairs"
          class="defra-header__logo"
        />
      </a>
      <a href="/" class="defra-header__service-name">{{ headerServiceName | default('Defra Digital') }}</a>
    </div>
    {% include "partials/header-search.njk" %}
  </div>
</header>
{% include "partials/landing-navigation.njk" %}
{% endblock %}

{% block content %}
  <div class="defra-hero">
    <div class="defra-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-xl">
            {{ heading }}
          </h1>
          <p class="govuk-body-l">
            Tools, guidance and support to help you design, build and operate successful services for Defra.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="defra-width-container govuk-!-margin-top-5">
    <div class="govuk-grid-row defra-tile-grid">
      <div class="govuk-grid-column-full">
        <p class="govuk-body">To see some of this information you will need to sign in to Defra.</p>
      </div>
    </div>

    <div class="govuk-grid-row defra-tile-grid">
      <div class="govuk-grid-column-one-half">
        <a href="/service-manual" class="defra-tile">
          <span class="govuk-caption-m">Standard</span>
          <h2 class="govuk-heading-m defra-tile__title">
            Defra Service Manual
          </h2>
          <p class="govuk-body defra-tile__body">Check the requirements you need to follow and how to design and deliver great services in Defra.</p>
        </a>
      </div>
      
      <div class="govuk-grid-column-one-half">
        <a href="/delivery-groups" class="defra-tile">
          <span class="govuk-caption-m">Guidance</span>
          <h2 class="govuk-heading-m defra-tile__title">
            Delivery Groups
          </h2>
          <p class="govuk-body defra-tile__body">Find out about the different delivery groups and how they support your work.</p>
        </a>
      </div>
    </div>

    <div class="govuk-grid-row defra-tile-grid">
      <div class="govuk-grid-column-one-half">
        <a href="#" class="defra-tile">
          <span class="govuk-caption-m">Guidance</span>
          <h2 class="govuk-heading-m defra-tile__title">
            Secure by Design
          </h2>
          <p class="govuk-body defra-tile__body">Make and keep your capabilities or services secure and reduce security risks to Defra.</p>
        </a>
      </div>

      <div class="govuk-grid-column-one-half">
        <a href="#" class="defra-tile">
          <span class="govuk-caption-m">Guidance</span>
          <h2 class="govuk-heading-m defra-tile__title">
            AI Practitionerâ€™s Handbook
          </h2>
          <p class="govuk-body defra-tile__body">Find the latest guidance on how to develop and use AI safely, responsibly and with confidence.</p>
        </a>
      </div>
    </div>

    <div class="govuk-grid-row defra-tile-grid">
      <div class="govuk-grid-column-full">
        <div class="app-coming-soon">
          <h2 class="govuk-heading-m">Coming soon</h2>
          <p class="govuk-body">More guidance and resources will be available on the digital delivery hub in the coming months. Let us know if there is something you would like to see available here.</p>
          <a href="#" class="govuk-button">Contact us</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
