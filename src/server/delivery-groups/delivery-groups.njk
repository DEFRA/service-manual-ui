{% extends "layouts/page.njk" %}

{% block pageTitle %}
  {{ pageTitle }} | {{ serviceName }}
{% endblock %}

{% block header %}
<header class="defra-header">
  <div class="defra-header__inner">
    <div class="defra-header__brand-group">
      <a href="/" class="defra-header__logo-link">
        <img
          src="{{ getAssetPath('images/defra-logo.svg') }}"
          alt="Department for Environment, Food &amp; Rural Affairs"
          class="defra-header__logo"
        />
      </a>
      <a href="/" class="defra-header__service-name">{{ headerServiceName | default('Defra digital') }}</a>
    </div>
    {% include "partials/header-search.njk" %}
  </div>
</header>
<div class="defra-breadcrumb-bar">
  <div class="govuk-width-container">
    <a href="/" class="defra-breadcrumb-bar__link">Home</a>
  </div>
</div>
{% endblock %}

{% block content %}
  <div class="defra-hero">
    <div class="defra-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-xl">
            {{ heading }}
          </h1>
          <p class="govuk-body-l">
            Understanding the standards, governance and assurance process for your delivery group.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="defra-width-container govuk-!-margin-top-5">
    <div class="govuk-grid-row defra-tile-grid">
      <div class="govuk-grid-column-one-half">
        <a href="#" class="defra-tile">
          <h2 class="govuk-heading-m defra-tile__title">
            Follow delivery governance
          </h2>
          <p class="govuk-body defra-tile__body">Understand the boards, approvals and reporting required for your delivery group.</p>
        </a>
      </div>

      <div class="govuk-grid-column-one-half">
        <a href="#" class="defra-tile">
          <h2 class="govuk-heading-m defra-tile__title">
            Meet delivery standards
          </h2>
          <p class="govuk-body defra-tile__body">How to meet the standards expected of a high-performing delivery group.</p>
        </a>
      </div>
    </div>
  </div>
{% endblock %}
